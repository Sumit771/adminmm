rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isTeamLeader() {
      return isAuthenticated() && request.auth.token.email == 'vivek@mm.com';
    }

    // Allow read access for all authenticated users (to view sample images)
    match /samples/{allPaths=**} {
      allow read: if isAuthenticated();
      // Only Team Leader can upload sample images
      allow write: if isTeamLeader() &&
        request.resource.size < 100 * 1024 && // 100KB limit
        request.resource.contentType.matches('image/.*'); // Only images
      allow delete: if isTeamLeader();
    }

    // Default deny for any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}