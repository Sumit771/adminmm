rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isTeamLeader() {
      return isAuthenticated() && request.auth.token.email == 'vivek@mm.com';
    }

    function isEditor() {
      return isAuthenticated() && request.auth.token.email != 'vivek@mm.com';
    }

    function isOrderOwner(orderId) {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/orders/$(orderId)) &&
             get(/databases/$(database)/documents/orders/$(orderId)).data.assignedToEmail == request.auth.token.email;
    }

    // Orders collection rules
    match /orders/{orderId} {
      // Allow read for all authenticated users
      allow read: if isAuthenticated();

      // Allow create for Team Leader only
      allow create: if isTeamLeader() &&
        request.resource.data.keys().hasAll(['name', 'whatsapp', 'country', 'telecaller', 'assignedToEmail', 'assignedToName', 'sampleImageUrl', 'imageType', 'status', 'createdAt']) &&
        request.resource.data.keys().hasOnly(['name', 'whatsapp', 'country', 'telecaller', 'assignedToEmail', 'assignedToName', 'sampleImageUrl', 'imageType', 'status', 'createdAt', 'completedAt']) &&
        request.resource.data.name is string &&
        request.resource.data.whatsapp is string &&
        request.resource.data.country is string &&
        request.resource.data.telecaller is string &&
        request.resource.data.assignedToEmail is string &&
        request.resource.data.assignedToName is string &&
        request.resource.data.sampleImageUrl is string &&
        request.resource.data.imageType in ['upload', 'url'] &&
        request.resource.data.status == 'pending' &&
        request.resource.data.createdAt is timestamp;

      // Allow update for Team Leader (full access) or assigned Editor (status only)
      allow update: if (isTeamLeader() ||
        (isEditor() && isOrderOwner(orderId) &&
         // Editors can only update status and completedAt
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'completedAt']) &&
         request.resource.data.status in ['pending', 'in-progress', 'completed'] &&
         (request.resource.data.status != 'completed' || request.resource.data.completedAt == request.time)
        ));

      // Allow delete for Team Leader only
      allow delete: if isTeamLeader();
    }

    // Users collection (if needed for additional user data)
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isTeamLeader();
    }

    // Editor statistics collection
    match /editorStats/{editorEmail} {
      // Team Leaders can read all editor stats
      allow read: if isTeamLeader();
      // Editors can read their own stats
      allow read: if isEditor() && request.auth.token.email == editorEmail;
      // Allow create/update for system (could be done via Cloud Functions)
      // For now, allow authenticated users to create/update (in production, restrict to admin functions)
      allow write: if isAuthenticated();
    }
  }
}